div
  h2=movie.title
  img(src=movie.img, alt=movie.title)
  p=movie.description
  p=movie.duration

div
  form(action=`/movies/update/${movie._id}`, method="POST")
      div
        input(type="text", name="title" placeholder="Name", value=movie.title)
        input(type="text", name="img" placeholder="image", value=movie.img)
        textarea(name="description", cols="30", rows="10" placeholder="Desc")=movie.description
        input(type="number", name="duration" placeholder="Duration (min)", value=movie.duration)

        button(type="submit") picale

